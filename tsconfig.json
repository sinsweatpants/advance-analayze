{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@preprod/*": [
        "packages/*/src"
      ]
    }
  },
  "include": [
    "apps/*/src",
    "packages/*/src",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
